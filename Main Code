            g7.append(randomPick)
        if groupNumber == 8:
            g8.append(randomPick)
        if groupNumber == 9:
            g9.append(randomPick)
        if groupNumber == 10:
            g10.append(randomPick)
        nameList.remove(randomPick)
        groupNumber = groupNumber + 1
        if groupNumber == 11:
            groupNumber = 1

    if desiredGroups == 3:
        if groupNumber == 1:
            g1.append(randomPick)
        if groupNumber == 2:
            g2.append(randomPick)
        if groupNumber == 3:
            g3.append(randomPick)
        if groupNumber == 4:
            g4.append(randomPick)
        if groupNumber == 5:
