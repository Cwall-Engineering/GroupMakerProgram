        if groupNumber == 6:
            g6.append(randomPick)
        nameList.remove(randomPick)
        groupNumber = groupNumber + 1
        if groupNumber == 7:
            groupNumber = 1
    
    if desiredGroups == 4:
        if groupNumber == 1:
            g1.append(randomPick)
        if groupNumber == 2:
            g2.append(randomPick)
        if groupNumber == 3:
            g3.append(randomPick)
        if groupNumber == 4:
            g4.append(randomPick)
        if groupNumber == 5:
            g5.append(randomPick)
        nameList.remove(randomPick)
        groupNumber = groupNumber + 1
        if groupNumber == 6:
            groupNumber = 1
if desiredGroups == 2:
    print("Group 1: ", g1)
