groupNumber = 1

randomPick = []

while len(nameList)> 0:
    randomPick = random.choice(nameList)
    if desiredGroups == 2:
        if groupNumber == 1:
            g1.append(randomPick)
        if groupNumber == 2:
            g2.append(randomPick)
